doctype html
html
  head
  include ./components/head.jade
  body

    
      header.p-3.font-sans.text-center
        div.container
          div.pt-md-3.pb-md-1
            h1.bd-title.mt-0= profileName
            p.bd-lead Bạn đang có 
              span.badge.badge-dark= totalBadges
              |  badges, trong đó 
              span.badge.badge-dark= skillBadgeCount
              |  skill badges và 
              span.badge.badge-dark= regularBadgeCount
              |  regular badges  

      main
        div.p-2.font-sans.container
          div.table-responsive
            h3
              | Tất cả các badge của 
              span.text-danger=profileName 
              |  trong Season 6
            table.table
              thead
                tr
                  th #
                  th Khóa học
                  th.d-none.d-md-table-cell.text-center Thời gian hoàn thành
                  th.d-none.d-md-table-cell.text-center Trạng thái
              tbody
                  - each badge, i in badgesOfUser
                    tr
                      td= i+1
                      td= badge.title
                        div.text-muted 
                          span.fs-12.fw-light.px-2.d-inline.d-md-none
                            i.pr-1.bi.bi-calendar3.text-dark
                            =badge.timeStr 
                          span.fs-12.fw-light.px-2.d-inline.d-md-none
                            case badge.status
                              when 'NOT_IN_SS6'
                                i.pr-1.bi.bi-ban.text-danger
                                | Nằm ngoài SS6
                              when 'TIME_NOT_OK'
                                i.pr-1.bi.bi-ban.text-danger
                                | Sai thời gian
                              when 'NOT_COMPLETE'
                                i.pr-1.bi.bi-award.text-dark
                                | Chưa học
                              default
                                i.pr-1.bi.bi-check-circle-fill.text-success
                                | Hợp lệ
                      td.d-none.d-md-table-cell.text-center(title=badge.timeHint)= badge.timeStr 
                      td.d-none.d-md-table-cell.text-center
                        case badge.status
                          when 'NOT_IN_SS6'
                            i.pr-1.bi.bi-ban.text-danger
                            | Nằm ngoài SS6
                          when 'TIME_NOT_OK'
                            i.pr-1.bi.bi-ban.text-danger
                            | Sai thời gian
                          when 'NOT_COMPLETE'
                            i.pr-1.bi.bi-award.text-dark
                            | Chưa học
                          default
                            i.pr-1.bi.bi-check-circle-fill.text-success
                            | Hợp lệ